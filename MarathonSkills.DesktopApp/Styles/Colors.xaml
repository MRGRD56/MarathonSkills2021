<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="BrazilianGreen" A="255" R="0" G="144" B="0"/>
    <Color x:Key="BrazilianYellow" A="255" R="253" G="193" B="0"/>
    <Color x:Key="BrazilianBlue" A="255" R="36" G="29" B="112"/>

    <Color x:Key="ButtonGray" A="255" R="242" G="242" B="242"/>
    <Color x:Key="LightGray" A="255" R="253" G="253" B="253"/>
    <Color x:Key="Gray" A="255" R="180" G="180" B="180"/>
    <Color x:Key="DarkGray" A="255" R="80" G="80" B="80"/>

    <SolidColorBrush x:Key="BrazilianGreenBrush" Color="{StaticResource BrazilianGreen}"/>
    <SolidColorBrush x:Key="BrazilianYellowBrush" Color="{StaticResource BrazilianYellow}"/>
    <SolidColorBrush x:Key="BrazilianBlueBrush" Color="{StaticResource BrazilianBlue}"/>

    <SolidColorBrush x:Key="ButtonGrayBrush" Color="{StaticResource ButtonGray}"/>
    <SolidColorBrush x:Key="LightGrayBrush" Color="{StaticResource LightGray}"/>
    <SolidColorBrush x:Key="GrayBrush" Color="{StaticResource Gray}"/>
    <SolidColorBrush x:Key="DarkGrayBrush" Color="{StaticResource DarkGray}"/>
</ResourceDictionary>
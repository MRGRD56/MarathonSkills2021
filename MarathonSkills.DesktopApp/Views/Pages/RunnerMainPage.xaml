<Page x:Class="MarathonSkills.DesktopApp.Views.Pages.RunnerMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkills.DesktopApp.Views.Pages"
      xmlns:viewModels="clr-namespace:MarathonSkills.DesktopApp.ViewModels"
      mc:Ignorable="d" Style="{StaticResource PageStyle}"
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:windows="clr-namespace:MarathonSkills.DesktopApp.Views.Windows"
      Title="Меню бегуна">
    <Page.DataContext>
        <viewModels:BaseViewModel/>
    </Page.DataContext>
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Style="{StaticResource Header20}" Text="Меню бегуна" Margin="100 0 100 30"
                       HorizontalAlignment="Center"/>
            <Grid IsSharedSizeScope="True">
                <Grid.RowDefinitions>
                    <RowDefinition SharedSizeGroup="Row"/>
                    <RowDefinition SharedSizeGroup="Row"/>
                    <RowDefinition SharedSizeGroup="Row"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
                        <Setter Property="Padding" Value="40 8"/>
                        <Setter Property="FontStyle" Value="Italic"/>
                    </Style>
                </Grid.Resources>
                <Button Grid.Row="0" Grid.Column="0"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="{x:Type local:RegisterForEventPage}">
                    <TextBlock TextAlignment="Center">
                        Регистрация на <LineBreak/>
                        марафон
                    </TextBlock>
                </Button>
                <Button Grid.Row="0" Grid.Column="1"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="{x:Type local:MyRaceResultsPage}">
                    <TextBlock TextAlignment="Center">
                        Мои результаты
                    </TextBlock>
                </Button>
                <Button Grid.Row="1" Grid.Column="0"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="{x:Type local:EditRunnerProfilePage}">
                    <TextBlock TextAlignment="Center">
                        Редактирование<LineBreak/>
                        профиля
                    </TextBlock>
                </Button>
                <Button Grid.Row="1" Grid.Column="1"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="{x:Type local:MySponsorshipPage}">
                    <TextBlock TextAlignment="Center">
                        Мой спонсор 
                    </TextBlock>
                </Button>
                <Button Grid.Row="2" Grid.Column="0"
                        Command="{Binding ShowDialogWindowCommand}"
                        CommandParameter="{x:Type windows:ContactsInfoWindow}">
                    <TextBlock TextAlignment="Center">
                        Контакты
                    </TextBlock>
                </Button>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
